---
import sulLogo from "../assets/sul-logo.249x40.png";
---

<footer>
  <a href="https://library.stanford.edu/" title="Stanford Libraries">
    <img src={sulLogo.src} height="40" width="249" alt="Stanford Libraries" />
  </a>

  <a href="https://github.com/sul-cidr/cidr-site" target="_blank" rel="noopener">
    <svg xmlns="http://www.w3.org/2000/svg" aria-label="GitHub" role="img" viewBox="0 0 512 512">
      <rect width="512" height="512" rx="15%"></rect>
      <path
        d="M335 499c14 0 12 17 12 17H165s-2-17 12-17c13 0 16-6 16-12l-1-50c-71 16-86-28-86-28-12-30-28-37-28-37-24-16
    1-16 1-16 26 2 40 26 40 26 22 39 59 28 74 22 2-17 9-28 16-35-57-6-116-28-116-126 0-28 10-51 26-69-3-6-11-32 3-67
    0 0 21-7 70 26 42-12 86-12 128 0 49-33 70-26 70-26 14 35 6 61 3 67 16 18 26 41 26 69 0 98-60 120-117 126 10 8 18
    24 18 48l-1 70c0 6 3 12 16 12z"
      ></path>
    </svg>GitHub
  </a>
</footer>

<style>
  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 1em 2em;
    justify-content: center;
    margin-top: 2em;
    width: var(--wrap);
  }

  a {
    display: flex;
    vertical-align: bottom;
    width: fit-content;
    color: black;
    text-decoration: none;
    align-items: center;
    gap: 0.25em;
    pointer-events: auto;
    transition: color 0.3s ease;
  }

  img {
    margin-top: -8px;
  }

  svg {
    margin-top: -4px;
    width: 1em;

    path {
      fill: white;
    }

    rect {
      fill: grey;
    }
  }

  @media screen and (min-width: 768px) {
    footer {
      justify-content: space-between;
    }
  }
</style>
