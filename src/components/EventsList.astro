---
import { DateTime } from "luxon";
import allEvents from "../data/events.yaml";

const { type } = Astro.props;

const fmt = {
  month: "long",
  day: "numeric",
  weekday: "long",
  hour: "numeric",
  minute: "numeric",
  year: "numeric",
};

let events = allEvents.sort((a, b) => b.datetime - a.datetime);

switch (type) {
  case "past":
    events = events.filter((event) => event.datetime < new Date());
    break;

  case "upcoming":
    events = events.filter((event) => event.datetime > new Date()).reverse();
    break;

  default:
    break;
}
---

<section>
  {
    events.map(async (event, idx) => {
      return (
        <>
          <input type="checkbox" id={`event-${idx}`} />
          <label for={`event-${idx}`}>
            <header>{event.title}</header>
            <time datetime={DateTime.fromJSDate(event.datetime).setZone("UTC").toFormat("yyyy-MM-dd HH:mm:ss.000")}>
              {DateTime.fromJSDate(event.datetime).setZone("UTC").toLocaleString(fmt)}
            </time>
            <div set:html={event.description} />
          </label>
        </>
      );
    })
  }
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    padding: 2em 0;
    position: relative;
    padding-left: 6px;

    /* :global() styling is for included description html */
    :global(ul) {
      padding-left: 1em;
    }

    :global(div.ws1) {
      border-bottom: 1px solid #ccc;
      margin-bottom: 0.5em;
      padding-bottom: 0.5em;
    }

    :global(div.ws1 > div) {
      display: grid;
    }

    :global(div.ws1 > strong) {
      display: block;
      text-align: center;
    }

    :global(ul.ws1) {
      margin: 0 0 0 1em;
      padding-left: 1em;
    }
  }

  section::before {
    background: var(--cool-grey);
    background: linear-gradient(to bottom, transparent 0%, var(--cool-grey) 6%, var(--cool-grey) 94%, transparent 100%);
    content: "";
    display: block;
    height: 100%;
    position: absolute;
    top: 0;
    width: 6px;
    z-index: 2;
  }

  header,
  time {
    display: block;
    transition:
      margin-right 0.2s 0.2s ease-in-out,
      margin-left 0.2s 0.2s ease-in-out;
    width: fit-content;
  }

  header {
    color: var(--cardinal);
    font-size: 0.9em;
  }

  time {
    font-size: 0.7em;
    font-style: italic;
  }

  input[type="checkbox"] {
    display: none;
  }

  label {
    align-items: flex-start;
    background-color: transparent;
    border-radius: 0.25em;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    margin: 0.2em 0;
    margin-left: 1rem;
    padding: 0.5em;
    position: relative;
    transition:
      width 0.2s 0.2s ease-in-out,
      background-color 0.1s 0s ease-in-out,
      box-shadow 0.2s 0.2s ease-in-out;
    width: calc(100% - 1rem);
    z-index: 3;

    &::before {
      background: white;
      border: 4px solid var(--cool-grey);
      content: "";
      display: block;
      height: 15px;
      left: calc(-0.25em - 1rem + 3px);
      margin-top: 0;
      position: absolute;
      top: 1em;
      transform: rotate(45deg);
      transition:
        transform 0.2s ease-in-out,
        left 0.2s 0.2s ease-in-out,
        right 0.2s 0.2s ease-in-out;
      width: 15px;
      z-index: 10;
    }

    &:hover {
      background-color: var(--fog-light);
    }
  }

  label > div {
    border-top: 1px solid var(--cardinal);
    font-size: 0;
    margin-top: 0.5em;
    max-width: 100%;
    opacity: 0;
    overflow: hidden;
    padding-top: 0.5em;
    transition:
      opacity 0.2s ease-in-out,
      font-size 0.2s 0.2s ease-in-out;
  }

  input:checked + label {
    background-color: var(--fog-light);
    box-shadow: 0 1rem 3rem rgb(0 0 0 / 18%);
    transition:
      width 0.2s ease-in-out,
      background-color 0.2s ease-in-out,
      box-shadow 0.2s ease-in-out;

    header,
    time {
      transition: margin-right 0.2s ease-in-out;
    }

    &::before {
      right: 1.5rem;
      transform: none;
      transition:
        transform 0.2s ease-in-out,
        right 0.2s ease-in-out;
    }

    & > div {
      font-size: 0.7em;
      opacity: 1;
      transition:
        opacity 0.2s 0.2s ease-in-out,
        font-size 0.2s ease-in-out;
    }
  }

  @media screen and (min-width: 768px) {
    section {
      :global(.ws1 > div) {
        grid-template-columns: 6em auto;
      }
    }

    section::before {
      left: 50%;
      margin-left: -3px;
    }

    header,
    time {
      text-align: right;
    }

    header {
      font-size: 1em;
    }

    time {
      font-size: 0.9em;
    }

    label {
      align-items: flex-end;
      margin-left: 0;
      width: calc(50% - 0.5em);

      &::before {
        left: unset;
        right: calc(-0.5em + 3px);
        transform: translate(50%, 0) rotate(45deg);
      }

      &:nth-of-type(2n) {
        align-items: flex-start;
        align-self: flex-end;
        padding-left: 0.5em;

        time,
        header {
          text-align: left;
        }

        &::before {
          left: calc(-0.5em - 3px);
          transform: translate(-50%, 0) rotate(45deg);
        }
      }

      > div {
        padding: 0.5em 2rem;
      }
    }

    input:checked + label {
      width: 100%;

      header,
      time {
        margin-right: 2rem;
      }

      &::before {
        transform: translate(50%, 0) rotate(0deg);
      }

      & > div {
        font-size: 0.9em;
      }

      &:nth-of-type(2n) {
        &::before {
          left: 1.5rem;
          transform: translate(-50%, 0) rotate(0deg);
          transition:
            transform 0.2s ease-in-out,
            left 0.2s ease-in-out;
        }

        header,
        time {
          margin-left: 2rem;
          transition: margin-left 0.2s ease-in-out;
        }
      }
    }
  }
</style>
